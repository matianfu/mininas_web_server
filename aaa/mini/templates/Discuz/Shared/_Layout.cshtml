<!DOCTYPE html>
<html lang="zh">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> 
        <title>@ViewBag.Title</title>
        <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" /> 
        <link href="/Content/Discuz/public.css" rel="stylesheet" />
        <link href="/Content/Discuz/PluginCss.css" rel="stylesheet" />
        <script src="/Scripts/jquery-1.8.2.min.js"></script>
        <script src="/Scripts/popup.mini.js"></script>
        <script src="/Scripts/public.js"></script>
        <script src="/Scripts/Discuz/PluginJavascript.js"></script>
        @RenderSection("header", required: false)  
    </head>
<body onresize="ReSet()" onload="ReSet()">
    <div id="body">
        @RenderSection("featured", required: false)
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        // left  下拉菜单
        $(".lhead .vhead").click(function () {
            if ($(".lhead  ul").css("display") == "none") {
                $(".lhead  ul").css("display", "block");
            }
            else {
                $(".lhead  ul").css("display", "none");
            }
        });
        $(".lhead").hover(function () {

        }, function () {
            $(".lhead  ul").css("display", "none");
        });

        // right click1

        $("#album_act").click(function () {
            if ($("#album_act_list").css("display") == "none") {
                $("#album_act_list").css("display", "block");
            }
            else {
                $("#album_act_list").css("display", "none");
            }
        });

        $(".rLists").hover(function () {

        }, function () {
            $("#album_act_list").css("display", "none");
        });

        // right click2
        $("#photo_act").click(function () {
            if ($("#photo_act_list").css("display") == "none") {
                $("#photo_act_list").css("display", "block");
            }
            else {
                $("#photo_act_list").css("display", "none");
            }
        });

        $(".rLists").hover(function () {

        }, function () {
            $("#photo_act_list").css("display", "none");
        });

        //取消 or 关闭
        $(".cancel").click(function () {
            $(".popup-layer").hide();
        })
        //checkbox全选按扭事件
        $(".checkAll").live("change", function () {

            var checked;
            checked = $(this).is(":checked");
            $("input[type='checkbox'][name='checkOne']").prop("checked", checked);
            $("input[type='checkbox'][name='checkAll']").prop("checked", checked);
        });

        // 详细列表 or 缩略图切换
        $(function () {
            $("#list").click(function () {
                $(".Thumbnail_list").css("display", "none");
                $(".table_list").css("display", "block");
                $(".list_checkAll").css("display", "none");
                $("#allnum").text($(".scrollbar table tbody tr").length);
               
            });
            $("#thumbnail").click(function () {
                $(".table_list").css("display", "none");
                $(".Thumbnail_list").css("display", "block");
                $(".list_checkAll").css("display", "block");
                $("#allnum").text($(".Thumbnail_list li").length)
                
            });
            if ($(".Thumbnail_list").css("display", "none")) {
                $("#allnum").text($(".scrollbar table tbody tr").length);
            }
        });
        

        //left列表点击 改变right 列表的text
        var liList = $(".fun_list li");
        liList.click(function () {
            var li_Index = liList.index(this);
            $("#sel_album_title").text(liList.eq(li_Index).children("span").text());
        });
    </script>
</body>
</html>
