                                <td>
                                    <div class="checkbox">
                                        <input id="check1" type="checkbox" name="checkOne">
                                        <label for="check1"></label>
                                    </div>
                                </td>
                                <td>Homo_sapiens.GRCh38.cdna.al...</td>
                                <td>错误</td>
                                <td>0 B</td>
                                <td>0% </td>
                                <td>- -</td>
                                <td>
                                    <a class="cleartask icon-pause" title="暂停"></a>
                                    <a class="cleartask icon-play" title="播放"></a>
                                    <a class="cleartask icon-delete" title="删除"></a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="checkbox">
                                        <input id="check2" type="checkbox" name="checkOne">
                                        <label for="check2"></label>
