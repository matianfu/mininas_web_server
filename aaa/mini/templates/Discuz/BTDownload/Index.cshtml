                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
}
@*新建BT任务*@
<div id="popupLayer_BTsone" class="popup-layer">
    <div id="popupLayerBox_BTsone" class="popup-layer-box uploadPhoto w400">
        <i id="closePopupLayer_BTsone" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">新建BT任务:</h3>
            <div class="BTsone">
                <div class="Upload-lf">
                    <a class="Upload-Btn">选择文件</a>
                </div>
                <p class="BTsone-text">请输入正确格式的磁力链接</p>
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">立即下载</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
@*新建磁链任务*@
<div id="popupLayer_Flux_task" class="popup-layer">
    <div id="popupLayerBox_Flux_task" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_Flux_task" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">新建磁链任务:</h3>
            <div class="link_text">
                <div class="group clear">
                    <span class="caption  fl">磁力链接：</span>
                    <textarea class="txtUrl" id="txtUrl"></textarea>
                </div>
                <p class="msg">请输入正确格式的磁力链接</p>
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">立即下载</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>

@*删除*@
<div id="popupLayer_BT_tip" class="popup-layer">
    <div id="popupLayerBox_BT_tip" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_BT_tip" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">提示信息：</h3>
            <div class="Warning clear">
                <span class="Warn-icon  fl"></span>
                <p class="Warn-text fl red-color">警告：您确定要删除选定任务吗？</p>
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">确定</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        //新建磁链任务
        $("#Flux_task").click(function () {
            Popup.init('closePopupLayer_Flux_task', 'popupLayer_Flux_task', 'popupLayerBox_Flux_task');
            Popup.popup();
        });
        //新建BT任务
        $("#BT_task").click(function () {
            Popup.init('closePopupLayer_BTsone', 'popupLayer_BTsone', 'popupLayerBox_BTsone');
            Popup.popup();
        });
        //删除
        $(".icon-delete").click(function () {
            Popup.init('closePopupLayer_BT_tip', 'popupLayer_BT_tip', 'popupLayerBox_BT_tip');
            Popup.popup();
        });
    });
</script>

