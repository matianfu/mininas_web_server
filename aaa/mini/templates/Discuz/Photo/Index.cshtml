@*新建相册*@
<div id="popupLayer_Photo_Add" class="popup-layer">
    <div id="popupLayerBox_Photo_Add" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_Photo_Add" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">新建相册:</h3>
            <div class="photo_text">
                <div class="group clear">
                    <span class="caption fl">相册标题：</span>
                    <input type="text" class="w260">
                    <span class="red-color fl">*</span>
                </div>
                <p class="msg"></p>
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">新建</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
@*编辑*@
<div id="popupLayer_Photo_Edit" class="popup-layer">
    <div id="popupLayerBox_Photo_Edit" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_Photo_Edit" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">编辑相册：</h3>
            <div class="photo_text clear">
                <span class="caption fl">相册标题：</span>
                <input type="text" class="w260">
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">确定</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
@*上传照片*@
<div id="popupLayer_Photo_upload" class="popup-layer">
    <div id="popupLayerBox_Photo_upload" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_Photo_upload" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">上传照片：</h3>
            <div class="photo_Upload clear">
                <div class="Upload-lf fl">
                    <a class="Upload-Btn">选择文件</a>
                </div>
                <div class="Upload-Text rt">
                    <span>说明：<br>1、文件名将过滤字符：'，"，%，# 。<br>2、如存在同名文件，新文件将不被保存。<br>3、0kb文件不会被上传。</span>
                </div>
            </div>
            <div class="Upload-progress">
                <span>上传进度：</span>
            </div>
            <div class="btnBox">
                <a class="cancel" id="cancel">关闭</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        //新建相册
        $("#Photo_Add").click(function () {
            Popup.init('closePopupLayer_Photo_Add', 'popupLayer_Photo_Add', 'popupLayerBox_Photo_Add');
            Popup.popup();
        });

        //编辑
        $("#Photo_Edit").click(function () {
            Popup.init('closePopupLayer_Photo_Edit', 'popupLayer_Photo_Edit', 'popupLayerBox_Photo_Edit');
            Popup.popup();
        });

        //上传照片
        $("#Photo_upload").click(function () {
            Popup.init('closePopupLayer_Photo_upload', 'popupLayer_Photo_upload', 'popupLayerBox_Photo_upload');
            Popup.popup();
        });
    });
</script>
