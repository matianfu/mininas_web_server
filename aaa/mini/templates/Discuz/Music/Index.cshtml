@*新建播放列表*@
<div id="popupLayer_Music_Add" class="popup-layer">
    <div id="popupLayerBox_Music_Add" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_Music_Add" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">新建播放列表：</h3>
            <div class="photo_text">
                <div class="group clear">
                    <span class="caption  fl">列表标题：</span>
                    <input type="text" class="w260">
                    <span class="red-color fl">*</span>
                </div>
                <p class="msg"></p>
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">新建</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
@*编辑播放列表*@
<div id="popupLayer_Music_Edit" class="popup-layer">
    <div id="popupLayerBox_Music_Edit" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_Music_Edit" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">编辑播放列表：</h3>
            <div class="photo_text clear">
                <span class="caption  fl">列表标题：</span>
                <input type="text" class="w260">
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">确定</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
@*添至列表*@
<div id="popupLayer_Music_AddTo_list" class="popup-layer">
    <div id="popupLayerBox_Music_AddTo_list" class="popup-layer-box downloadHttp w400">
