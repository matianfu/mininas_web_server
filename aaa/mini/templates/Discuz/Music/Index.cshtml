        <div class="downloadpup clear">
            <h3 class="item_tit">添加至列表：</h3>
            <div class="photo_text clear">
                <span class="caption  fl">列表标题：</span>
                <select class="w260">
                    <option>列表1</option>
                    <option>列表2</option>
                    <option>列表3</option>
                    <option>列表4</option>
                </select>
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">确定</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
@*移出列表*@
<div id="popupLayer_Music_Remove_list" class="popup-layer">
    <div id="popupLayerBox_Music_Remove_list" class="popup-layer-box downloadHttp w400">
        <i id="closePopupLayer_Music_Remove_list" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">移出列表：</h3>
            <div class="Warning clear">
                <span class="Warn-icon  fl"></span>
                <p class="Warn-text fl">列表<span class="remove-listName">“恐怖片”</span>将被移除</p>
            </div>
            <div class="btnBox">
                <a class="download" id="btnDownload">确定</a>
                <a class="cancel" id="cancel">取消</a>
            </div>
        </div>
    </div>
</div>
@*上传音频*@
<div id="popupLayer_Music_upload" class="popup-layer">
