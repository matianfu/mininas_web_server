            Popup.init('closePopupLayer_Music_Remove_list', 'popupLayer_Music_Remove_list', 'popupLayerBox_Music_Remove_list');
            Popup.popup();
        });

        //上传音频
        $("#Music_upload").click(function () {
            Popup.init('closePopupLayer_Music_upload', 'popupLayer_Music_upload', 'popupLayerBox_Music_upload');
            Popup.popup();
        });
    });
</script>




