        <i id="closePopupLayer_Music_upload" class="close-Download">×</i>
        <div class="downloadpup clear">
            <h3 class="item_tit">上传音频：</h3>
            <div class="photo_Upload clear">
                <div class="Upload-lf fl">
                    <a class="Upload-Btn">选择文件</a>
                </div>
                <div class="Upload-Text rt">
                    <span>说明：<br>1、文件名将过滤字符：'，"，%，# 。<br>2、如存在同名文件，新文件将不被保存。<br>3、0kb文件不会被上传。</span>
                </div>
            </div>
            <div class="Upload-progress">
                <span>上传进度：</span>
            </div>
            <div class="btnBox">
                <a class="cancel" id="cancel">关闭</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        //新建
        $("#Music_Add").click(function () {
            Popup.init('closePopupLayer_Music_Add', 'popupLayer_Music_Add', 'popupLayerBox_Music_Add');
            Popup.popup();
        });

        //编辑
        $("#Music_Edit").click(function () {
            Popup.init('closePopupLayer_Music_Edit', 'popupLayer_Music_Edit', 'popupLayerBox_Music_Edit');
            Popup.popup();
        });

        //添至列表
