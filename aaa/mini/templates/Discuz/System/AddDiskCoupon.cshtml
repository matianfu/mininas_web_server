@{
    ViewBag.Title = "AddDiskCoupon";
    Layout = "~/Views/Templates/Discuz/Shared/_SystemLayout.cshtml";
}

<div class="road">
    <span class="suninfo_str">首页 > 存储设置 > 磁盘卷管理</span>
</div>
<div class="rtgy-box">
    <div class="rtgy-cont">
        <h3>磁盘卷管理</h3>
        <div class="tab_contBox">
            <div class="set">
                <h5>基础设置</h5>
                <div class="group clear">
                    <label class="suninfo_cont_str">磁盘卷名称：</label>
                    <input type="text" class="w200" value="estor">
                    <span class="msg"><font>*</font></span>
                </div>
                <div class="group clear postion_box">
                    <label class="suninfo_cont_str">磁盘卷类型：</label>
                    <select id="securitylist" class="w200">
                        <option>条带盘 RAID-0</option>
                        <option>镜像 RAID-1</option>
                        <option>单盘冗余 RAID-5</option>
                        <option>双盘冗余 RAID-6</option>
                    </select>
                    <span class="msg">基于数据安全考虑，磁盘卷仅允许使用同一个机架上的磁盘</span>
                </div>
                <div class="group clear postion_box">
                    <label class="suninfo_cont_str">磁盘位置：</label>
                    <select id="securitylist" class="w200">
                        <option>ses-00</option>
                    </select>
                    <span class="msg">基于数据安全考虑，磁盘卷仅允许使用同一个机架上的磁盘</span>
                </div>
                <div class="group clear">
                    <label class="suninfo_cont_str">磁盘：</label>
                    <textarea class="text_box w200 w400">Disk1 (Slot2, JPW9M0N12ZASUL, 953869M, Hitachi_HUA722010CLA330)</textarea>
                    <span class="msg msg_bottom"> </span>
                </div>
                <div class="group clear">
                    <label class="suninfo_cont_str">描述：</label>
                    <input type="text" class="w200" value="">
                    <span class="msg">必要的描述文字</span>
                </div>
                <div class="group clear">
                    <label class="suninfo_cont_str">删除重复数据：</label>
                    <div class="checkbox mrt_10 fl m_4">
                        <input id="smart_enable" type="checkbox">
                        <label for="smart_enable"></label>
                    </div>
                    <span class="msg">删除多余数据副本</span>
                </div>
                <div class="btnBox">
                    <a class="save">保存</a>
                </div>
            </div>
        </div>
    </div>
</div>
